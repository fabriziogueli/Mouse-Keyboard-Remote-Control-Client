<Window x:Class="Client.connectWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="connectWindow" Height="206" Width="358" ResizeMode="NoResize" Closing="Window_Closing">
    <Grid Height="177" VerticalAlignment="Bottom">

        <Button x:Name="rightbuttonmonitor" Background="Transparent" BorderThickness="0"  Margin="190,45,50,50" Width="80"  Height="82" Click="Button_ClickRight">
            <Image  Source="Images/monitor.png" Width="70" Height="72" RenderTransformOrigin="-1.567,0.35"/>
        </Button>

        <Button x:Name="leftbuttonmonitor" Background="Transparent" BorderThickness="0" Margin="50,45,190,50"  Width="80"  Height="82" Click="Button_ClickLeft">
            <Image Source="Images/monitor.png" Width="70" Height="72" RenderTransformOrigin="-1.567,0.35"/>
        </Button>
        <Label Content="Left Server" HorizontalAlignment="Left" Margin="66,127,0,0" VerticalAlignment="Top"/>
        <Label Content="Right Server" HorizontalAlignment="Left" Margin="206,127,0,0" VerticalAlignment="Top"/>
    </Grid>
</Window>
